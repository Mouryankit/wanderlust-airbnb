

<% layout('/layouts/boilerplate.ejs') -%>

<div class="row">
    <div class="col-8 offset-2">
        <!-- <body> -->
            <h3>Create a new Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input 
                        name="listing[title]" 
                        placeholder="enter title" 
                        type="text" 
                        class="form-control"
                        required
                    />            
                    <div class="valid-feedback">Title looks Good</div> 
                    <div class="invalid-feedback">Title don't looks Good</div>
                </div>

                <div class="mb-3">
                    <label class="form-label mb-2">Select Categories</label>
                    <select 
                        name="listing[category]" 
                        class="form-select"  
                        required
                    >
                        <option value="">Select</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Domes">Domes</option>
                        <option value="Boats">Boats</option>
                        <option value="Beach">Beach</option>
                        <option value="City">City</option>
                        <option value="Forest">Forest</option>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea 
                        name="listing[description]" 
                        placeholder="enter description" 
                        type="text"
                        class="form-control"
                        required
                    ></textarea>
                    <div class="valid-feedback">Valid</div> 
                    <div class="invalid-feedback">Enter a short description</div>
                </div>

                
                <div class="mb-3">
                    <label for="image" class="form-label">Upload listing image ( image size < 2MB )</label>
                    <input 
                        name="listing[image]" 
                        placeholder="enter image URL/Link" 
                        type="file"
                        class="form-control"
                        required
                    />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input 
                            name="listing[price]" 
                            placeholder="enter price" 
                            type="number"
                            class="form-control"
                            required
                        />
                        <div class="valid-feedback">price looks good</div> 
                        <div class="invalid-feedback">Not correct Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input 
                            name="listing[country]" 
                            placeholder="enter country" 
                            type="text"
                            class="form-control"
                            required
                        />
                        <div class="valid-feedback">Country name looks good</div> 
                        <div class="invalid-feedback">Invalid Country name</div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input 
                        name="listing[location]" 
                        placeholder="enter location" 
                        type="text"
                        class="form-control"
                        required
                    />
                    <div class="valid-feedback">Looks Good</div> 
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form> 
            <br>
    </div>
</div>
